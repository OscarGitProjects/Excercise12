@model IEnumerable<Excercise12Garage2.Models.ParkedVehicle>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-3 w-25">Garage</h1>

@{
    await Html.RenderPartialAsync("_MessageView");
}

<p>
    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Park A New Vehicle!" asp-action="Park">Park vehicle</a>
</p>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Make)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CheckIn)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Make)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfWheels)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CheckIn)
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="Edit Your Vehicle" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="View Vehicle Details" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="bottom" title="Leave the Garage" asp-action="Remove" asp-route-id="@item.Id">Leave</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <p>No vehicle</p>
    </div>
}
