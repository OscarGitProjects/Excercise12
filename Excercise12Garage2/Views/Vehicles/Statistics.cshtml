@model Excercise12Garage2.Models.ViewModels.VehicleStatisticsViewModel

@{
    ViewData["Title"] = "Statistics";
}

<h1 class="display-2 w-50">Statistics</h1>

<div>
    <hr />
    <dl class="row w-50">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOfVehiclesInGarage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfVehiclesInGarage)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SumOfWheels)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SumOfWheels)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalRevenue)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalRevenue)
        </dd>
    </dl>

    <hr/>

    <h4>Number of vehicles per type</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleCountByType[0].VehicleTyp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.VehicleCountByType[0].VehicleCount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.VehicleCountByType)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleTyp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleCount)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Garage" asp-action="Index">Back to Garage</a>
</div>
