@model Excercise12Garage2.Models.VehicleEditViewModel

@{
    ViewData["Title"] = "Park";
}

<h1>Park a New Car!</h1>

<h4>New Vehicle</h4>
<hr />
<div class="row">

    @if (!Model.IsGarageFull)
    {
        <div class="col-md-4 col-sm-4">
            <form asp-action="Park">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*Dropdown for Vehicle Type*@
            <div class="form-group">
                @Html.LabelFor(m => m.VehicleType, new { @class = "control-label" })
                @Html.DropDownListFor(model => Model.VehicleType, Model.VehicleTypes, "Please Select Vehicle Type", new { @class = "form-control" })
                <span asp-validation-for="VehicleType" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <label asp-for="RegistrationNumber" class="control-label"></label>
                    <input asp-for="RegistrationNumber" class="form-control" />
                    <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Make" class="control-label"></label>
                    <input asp-for="Make" class="form-control" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfWheels" class="control-label"></label>
                    <input asp-for="NumberOfWheels" class="form-control" />
                    <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Park vehicle" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Park Your Vehicle" />
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="col-md-4 col-sm-4">
            <p>Garage is full</p>
        </div>
    }
</div>

<div>
<a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Garage" asp-action="Index">Back to Garage</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
