@model Excercise12Garage2.Models.ViewModels.VehicleReceiptViewModel

@{
    ViewData["Title"] = "Receipt";
}

<h1 class="w-25 font-weight-bold">Receipt</h1>

@{
    await Html.RenderPartialAsync("_MessageView");
}

<div>
    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RegistrationNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfArrivalAsString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfArrivalAsString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfLeavingAsString)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfLeavingAsString)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkedTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkedTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div id="btnprint">
    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Back to Garage" asp-action="Index">Back to Garage</a>
    <a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Print" onclick="window_print()" asp-action="Index">Print</a>
</div>

